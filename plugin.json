{
  "version": "1.20.0",
  "title": "Microwave Theme",
  "description": "Card based micro.blog theme",
  "fields": [
    {
      "field": "params.metaDescription",
      "label": "Site Description",
      "type": "text",
      "placeholder": "A blog running on Micro.blog"
    },
    {
      "field": "params.showTagline",
      "label": "Show Tagline",
      "type": "boolean"
    },
    {
      "field": "params.tagline",
      "label": "Tagline",
      "type": "text",
      "placeholder": ""
    },
    {
      "field": "params.paginateReplies",
      "label": "Paginate Replies",
      "type": "boolean"
    },
    {
      "field": "params.letterboxdUsername",
      "label": "Letterboxd Username",
      "type": "text",
      "placeholder": ""
    },
    {
      "field": "params.lastfmUsername",
      "label": "Last.fm Username",
      "type": "text",
      "placeholder": ""
    },
    {
      "field": "params.apiKey",
      "type": "text",
      "label": "wson.me API Key for Last.fm Integration",
      "placeholder": "contact me @joshda.wson.me BlueSky for a key"
    },
    {
      "field": "params.blueskyUsername",
      "label": "Bluesky Username",
      "type": "text",
      "placeholder": "e.g. joshda.wson.me"
    },
    {
      "field": "params.threadsUsername",
      "label": "Threads Username",
      "type": "text",
      "placeholder": "e.g. josh_____d"
    },
    {
      "field": "params.pixelfedLink",
      "label": "Pixelfed Link",
      "type": "text",
      "placeholder": "e.g. https://pixelfed.social/@username"
    },
    {
      "field": "params.tumblrUrl",
      "label": "Tumblr URL",
      "type": "text",
      "placeholder": "e.g. https://username.tumblr.com"
    },
    {
      "field": "params.mastodonLink",
      "label": "Mastodon Link",
      "type": "text",
      "placeholder": "e.g. https://mastodon.social/@username"
    },
    {
      "field": "params.showCrossposts",
      "label": "Show Crossposts",
      "type": "boolean"
    },
    {
      "field": "params.showCrosspostsPermalink",
      "label": "Show Crossposts Permalink Page",
      "type": "boolean"
    },
    {
      "field": "params.categoriesOnPosts",
      "label": "Show Categories on Posts",
      "type": "boolean"
    },
    {
      "field": "params.categoriesInSidebar",
      "label": "Show Categories in Sidebar",
      "type": "boolean"
    },
    {
      "field": "params.showCurrentlyReading",
      "label": "Show Currently Reading",
      "type": "boolean"
    },
    {
      "field": "params.showReadingTime",
      "label": "Show Reading Time on Posts",
      "type": "boolean"
    },
    {
      "field": "params.archivesInSidebar",
      "label": "Show Archives in Sidebar",
      "type": "boolean"
    },
    {
      "field": "params.truncatePostsOnIndex",
      "label": "Truncate Posts on Index Page",
      "type": "boolean"
    },
    {
      "field": "params.truncatePostsCharLimit",
      "label": "Truncate Posts Character Limit",
      "type": "integer",
      "placeholder": 250
    },
    {
      "field": "params.enableMarquee",
      "label": "Enable Marquee Content",
      "type": "boolean"
    },
    {
      "field": "params.marqueeContent",
      "label": "Marquee Content (HTML allowed)",
      "type": "text",
      "placeholder": ""
    }
  ]
}
